<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <description>
        Spring configuration for asynchronous message processing.
    </description>

    <bean id="externalCallService" class="org.openhubframework.openhub.core.common.asynch.ExternalCallServiceImpl"/>

    <bean id="asyncEventNotifier" class="org.openhubframework.openhub.core.common.event.AsyncEventNotifierImpl"/>


    <!-- message repairing -->
    <bean id="repairMessageService" class="org.openhubframework.openhub.core.common.asynch.repair.RepairMessageServiceDbImpl">
        <property name="transactionManager" ref="jpaTxManager"/>
    </bean>

    <bean id="repairExternalCallService" class="org.openhubframework.openhub.core.common.asynch.repair.RepairExternalCallDbImpl">
        <property name="transactionManager" ref="jpaTxManager"/>
    </bean>


    <!-- message poling -->
    <bean id="partlyFailedMessagesPool"
          class="org.openhubframework.openhub.core.common.asynch.queue.MessagesPoolDbImpl">
        <property name="transactionManager" ref="jpaTxManager"/>
    </bean>

    <bean id="jobStarterForMessagePooling"
          class="org.openhubframework.openhub.core.common.asynch.queue.JobStarterForMessagePooling"/>

    <bean class="org.openhubframework.openhub.core.common.asynch.queue.MessagePollExecutor"/>


    <!-- confirmation -->
    <bean id="confirmationService" class="org.openhubframework.openhub.core.common.asynch.confirm.ConfirmationServiceImpl"/>

    <bean id="jobStarterForConfirmationPooling"
          class="org.openhubframework.openhub.core.common.asynch.confirm.JobStarterForConfirmationPooling"/>

    <bean class="org.openhubframework.openhub.core.common.asynch.confirm.ConfirmationPollExecutor"/>

    <bean id="confirmationPool"
          class="org.openhubframework.openhub.core.common.asynch.confirm.ConfirmationPoolDbImpl"/>

    <bean id="confirmationCallback" class="org.openhubframework.openhub.core.common.asynch.confirm.DefaultConfirmationCallback"/>


    <!-- email service (depends on Camel SMTP component) -->
    <bean id="emailService" class="org.openhubframework.openhub.core.common.asynch.notification.EmailServiceCamelSmtpImpl"/>

</beans>