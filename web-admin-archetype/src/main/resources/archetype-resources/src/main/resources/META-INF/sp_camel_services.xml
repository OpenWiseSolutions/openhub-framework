#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <description>
        Configuration of services which use/are for Apache Camel.
    </description>

    <bean class="org.cleverbus.api.common.route.EndpointRegistryImpl"/>
    <bean class="org.cleverbus.api.common.ws.WsdlRegistrySpringImpl"/>

    <!-- picked up by SpringWebserviceComponent to skip setting camel headers/attachments to outbound SOAP message -->
    <bean id="messageFilter" class="org.cleverbus.api.common.ws.component.NoopMessageFilter"/>

    <!-- throttling -->
    <bean id="throttlingConfiguration" class="org.cleverbus.api.throttling.ThrottlingPropertiesConfiguration">
        <constructor-arg ref="confProperties"/>
        <property name="throttlingDisabled" value="${symbol_dollar}{disable.throttling}"/>
    </bean>
    <bean class="org.cleverbus.api.throttling.ThrottleCounterMemoryImpl" />
    <bean class="org.cleverbus.api.throttling.ThrottleProcessorImpl" />

    <!-- alerts -->
    <bean id="alertsConfiguration" class="org.cleverbus.api.alerts.AlertsPropertiesConfiguration">
        <constructor-arg ref="confProperties"/>
    </bean>
    <bean id="alertsCheckingService" class="org.cleverbus.api.alerts.AlertsCheckingServiceDbImpl"/>
    <bean class="org.cleverbus.api.alerts.EmailAlertListenerSupport"/>

    <!-- extensions -->
    <bean class="org.cleverbus.api.common.extension.PropertiesExtensionConfigurationLoader" depends-on="camelContext">
        <constructor-arg ref="confProperties"/>
    </bean>

    <bean class="org.cleverbus.api.common.route.SpringWsUriBuilder" />

    <beans profile="prod">
        <bean id="confirmationCallback" class="org.cleverbus.api.common.asynch.confirm.DelegateConfirmationCallback"/>

        <bean id="quartz" class="org.apache.camel.component.quartz2.QuartzComponent">
            <property name="startDelayedSeconds" value="30"/>
        </bean>
    </beans>

</beans>